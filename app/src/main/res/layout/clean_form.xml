<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_radius"
    android:backgroundTint="#ffffff"
    android:orientation="vertical"
    android:id="@+id/form_clean">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주변환경청결"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"></TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="시트교체"
            android:textAlignment="center"
            android:layout_marginRight="30dp"
            android:id="@+id/cb_changeSheet"
            android:background="@drawable/button_color"></androidx.appcompat.widget.AppCompatCheckBox>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="환의교체"
            android:textAlignment="center"
            android:id="@+id/cb_changeCloth"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_color"></androidx.appcompat.widget.AppCompatCheckBox>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="환기"
            android:textAlignment="center"
            android:id="@+id/cb_ventilation"
            android:background="@drawable/button_color"
            ></androidx.appcompat.widget.AppCompatCheckBox>

    </LinearLayout>
    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="특이사항"></TextView>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:id="@+id/et_cleanForm"
        android:background="@drawable/memo_border"
        android:hint="특이사항을 입력하세요"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:textColor="@color/black"

        >
    </EditText>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_color"
        android:id="@+id/btn_clean_save"
        android:text="저장"></androidx.appcompat.widget.AppCompatButton>

</LinearLayout>