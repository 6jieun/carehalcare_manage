<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/dialog_radius"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/tv_date"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:id="@+id/btn_update_report"
        android:text="변경기록"
        android:background="@drawable/button_radius"
        android:backgroundTint="#CCCCCC"
        android:textStyle="bold"
        android:layout_gravity="right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/detail_list"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="재활치료"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/detail_list"
            android:textColor="@color/black"
            android:id="@+id/tv_activedetail_jahal"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/detail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/detail_list"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="보행도움"
            android:textColor="@color/black"/>
        <TextView
            android:textStyle="bold"
            android:text="-"
            android:background="@drawable/detail_list"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:id="@+id/tv_activedetail_bohang"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/detail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:background="@drawable/detail_list"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="체위변경"
            android:textColor="@color/black"/>

        <TextView
            android:textStyle="bold"
            android:background="@drawable/detail_list"
            android:text="-"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:id="@+id/tv_activedetail_change"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:id="@+id/btn_active_detail"
            android:text="닫기"
            android:background="@drawable/button_radius"
            android:textStyle="bold"
            android:layout_gravity="center" />

    </LinearLayout>

</LinearLayout>