<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/detail_list"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="재활치료"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/detail_list"
            android:textColor="@color/black"
            android:id="@+id/tv_activedetail_jahal"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/detail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/detail_list"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="보행도움"
            android:textColor="@color/black"/>
        <TextView
            android:textStyle="bold"
            android:text="-"
            android:background="@drawable/detail_list"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:id="@+id/tv_activedetail_bohang"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/detail_list"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textStyle="bold"
            android:background="@drawable/detail_list"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="체위변경"
            android:textColor="@color/black"/>
        <TextView
            android:textStyle="bold"
            android:background="@drawable/detail_list"
            android:text="-"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:id="@+id/tv_activedetail_change"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_active_detail_delete"
            android:text="삭제하기"
            android:background="@color/material_dynamic_neutral_variant30"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_active_detail"
        android:text="닫기"
        android:background="@drawable/button_color"
        android:textStyle="bold"
        android:layout_gravity="center"

        />
    </LinearLayout>

</LinearLayout>